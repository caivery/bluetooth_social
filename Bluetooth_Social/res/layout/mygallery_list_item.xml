<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:id="@+id/myphoto_layout_middle"
	android:background="@color/white" android:paddingLeft="5dip"
	android:paddingTop="10dip" android:paddingRight="5dip"
	android:paddingBottom="10dip">


	<TextView android:text="08" android:layout_width="match_parent"
		android:textColor="@color/black" android:textStyle="bold"
		android:textSize="32dip" android:layout_height="100dp"
		android:layout_alignBottom="@+id/linearLayout1" android:id="@+id/myphoto_day" />

	<RelativeLayout 
		android:orientation="horizontal" android:layout_height="73dip"
		android:layout_width="73dip" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:layout_marginLeft="90dp"
		android:id="@+id/linearLayout1">
		<ImageView android:id="@+id/myphoto_iv"
		     android:layout_height="73dip" android:scaleType="fitXY"
		     android:layout_width="73dip"
			android:src="@drawable/app_icon" android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" android:background="@drawable/corners"/>
	</RelativeLayout>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="10月"
		android:id="@+id/myphoto_mounth" android:textStyle="bold"
		android:textSize="18dip" android:textColor="@color/black"
		android:layout_alignBaseline="@+id/myphoto_day"
		android:layout_alignBottom="@+id/myphoto_day"
		android:layout_alignLeft="@+id/myphoto_day" android:layout_marginLeft="35dp"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="今天的图片"
		android:id="@+id/myphoto_feelings" android:textColor="@color/black"
		android:layout_centerVertical="true" android:layout_toRightOf="@+id/linearLayout1"
		android:layout_marginLeft="16dp"></TextView>

</RelativeLayout>
