<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="75px"
    android:gravity="center_vertical"
    android:background="@drawable/tittle_bg"
  >
  <Button 
  		android:id="@+id/backButton" 
  		android:layout_gravity="center_horizontal"
		android:background="@drawable/title_back_xml" 
		android:layout_height="45dip" 
		android:layout_width="63dip"
		android:textSize="12dip"
		android:textColor="@color/white"
		android:text="@string/tittle_back"
		android:dividerHeight="2.0dip" />
  <TextView android:id="@+id/title_center_text"
      android:layout_centerHorizontal="true"
      android:ellipsize="end"
      android:singleLine="true"
      android:textColor="#fff"
      android:textSize="17dip"
      android:layout_width="wrap_content"
      android:layout_height="50dip"
      android:text="蓝牙社交软件"
      android:layout_alignTop="@+id/loginButton" 
      android:layout_alignBottom="@+id/loginButton"
      android:paddingTop="8dip"
      />
      <Button 
  		android:id="@+id/linkButton" 
  		android:layout_alignParentRight="true"
		android:background="@drawable/title_link_xml"
		android:textSize="12dip" 
		android:layout_height="45dip" 
		android:layout_width="63dip"
		android:textColor="@color/white"
		android:dividerHeight="2.0dip" 
        android:text="未连接"
        />
  
</RelativeLayout>