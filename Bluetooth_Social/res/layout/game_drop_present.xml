<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DropPresentActivity" >

    <!-- android:background="@drawable/droppresent_bg" -->
   <edu.minggo.game.icecream.DropIceCreamSurfaceView
        android:id="@+id/mysurface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        
        />
	<RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_vertical"  >  
  		<Button android:layout_gravity="left" android:textColor="@color/white"
			android:id="@+id/game_bt_left" android:layout_height="40dip"
			android:textSize="14dip" android:background="@drawable/title_btn_back"
			android:gravity="center"
			android:layout_width="70dip" android:text="@string/tittle_back"></Button>
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="堆雪糕"
        		android:layout_centerInParent="true"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />      
		</RelativeLayout>

	<TextView
	    android:id="@+id/game_droppresent_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/title"
	    android:layout_marginTop="16dp"
	    android:background="@drawable/stage_word_mdpi"
	    android:gravity="center"
	    android:text="1000ms"
	    android:textColor="@android:color/white"
	    android:textSize="30sp"
	    android:textStyle="bold" />

</RelativeLayout>